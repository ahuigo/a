{
  "title": "Ctrl+u/w to arrow del",
  "rules": [
    {
      "description": "Ctrl+u/w to (niz)...",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "w",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": {
              "key_code": "delete_or_backspace",
              "modifiers": [
                "option"
              ]
            }
        },{
          "type": "basic",
          "from": {
            "key_code": "u",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": {
              "key_code": "delete_or_backspace",
              "modifiers": [
                "command"
              ]
            }
        }
      ]
    }
  ]
}
